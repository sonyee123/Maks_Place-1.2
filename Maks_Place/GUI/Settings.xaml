<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Maks_Place.GUI.Setting">
    <ContentPage.Content>
        <Frame BackgroundColor="{DynamicResource backgroundColor3}">
            <StackLayout Spacing="50">
                <Label Text="Settings" FontSize="20" TextColor="{DynamicResource textColor2}"
                   HorizontalOptions="Center"/>
                <StackLayout Orientation="Horizontal">
                    <Label Text="1. Tap on button to trigger night mode." FontSize="Medium" TextColor="{DynamicResource textColor3}"/>
                    <Button x:Name="btnNightMode" Text="On/Off" FontSize="13" Clicked="ButtonNightMode_Clicked"
                     BackgroundColor="{DynamicResource backgroundColor2}" BorderRadius="20"></Button>
                </StackLayout>
            </StackLayout>
        </Frame>
    </ContentPage.Content>
</ContentPage>